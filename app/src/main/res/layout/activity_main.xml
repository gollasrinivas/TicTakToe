<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eee"
        android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_weight="1"
                  android:orientation="vertical"
                  android:layout_height="0dp">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_weight="2"
                      android:layout_height="0dp">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:background="@drawable/tictac"
                       android:layout_marginTop="15dp"
                       android:layout_marginStart="35dp"/>

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_marginTop="0dp"
                      android:layout_height="0dp"
                      android:orientation="horizontal"
                      android:layout_weight="1">

            <TextView android:layout_width="0dp"
                      android:layout_marginStart="50dp"
                      android:layout_weight="1"
                      android:layout_marginEnd="15dp"
                      android:layout_marginTop="15dp"
                      android:textColor="#E40822"
                      android:textStyle="bold"
                      android:textSize="22sp"
                      android:text="@string/turn"
                      android:id="@+id/turns"
                      android:gravity="center"
                      android:layout_height="wrap_content" tools:ignore="InvalidId"/>
            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_marginEnd="50dp"
                      android:layout_marginTop="15dp"
                      android:textSize="30sp"
                      android:layout_weight="2"
                      android:textColor="#5A7BCF"
                      android:textStyle="bold"
                      android:id="@+id/players_turn"
                      android:text="@string/player_1"


                      tools:ignore="InvalidId"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"

            android:layout_marginTop="30dp"
            android:orientation="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
            <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/roundbox"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text=""
                    android:textSize="100sp"
                    android:textColor="@android:color/white"
                    android:id="@+id/oneBtn"
                    android:onClick="btnClick"/>
            <Button android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/roundbox"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="100sp"
                    android:textColor="@android:color/white"
                    android:id="@+id/twoBtn"
                    android:onClick="btnClick"/>
            <Button android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/roundbox"
                    android:layout_marginBottom="3dp"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="100sp"
                    android:textColor="@android:color/white"
                    android:id="@+id/threeBtn"
                    android:onClick="btnClick"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">
            <Button android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/roundbox"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="100sp"
                    android:textColor="@android:color/white"
                    android:id="@+id/fourBtn"
                    android:onClick="btnClick"/>
            <Button android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/roundbox"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="100sp"
                    android:textColor="@android:color/white"
                    android:id="@+id/fiveBtn"
                    android:onClick="btnClick"/>
            <Button android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/roundbox"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="100sp"
                    android:textColor="@android:color/white"
                    android:id="@+id/sixBtn"
                    android:onClick="btnClick"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
            <Button android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="6dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/roundbox"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="100sp"
                    android:textColor="@android:color/white"
                    android:id="@+id/sevenBtn"
                    android:onClick="btnClick"/>
            <Button android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="6dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/roundbox"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="100sp"
                    android:textColor="@android:color/white"
                    android:id="@+id/eightBtn"
                    android:onClick="btnClick"/>
            <Button android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/roundbox"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="100sp"
                    android:textColor="@android:color/white"
                    android:id="@+id/nineBtn"
                    android:onClick="btnClick"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:background="@drawable/roundbox1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"

            android:layout_marginBottom="20dp"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" android:orientation="horizontal">
            <TextView android:layout_width="0dp"
                      android:layout_weight="0.8"
                      android:text="Games Left :"
                      android:gravity="center"
                      android:textSize="20sp"
                      android:textColor="#000"
                      android:textStyle="bold"
                      android:layout_height="match_parent"/>
            <TextView android:layout_width="0dp"
                      android:layout_weight="0.5"
                      android:text="@string/_0"
                      android:textSize="30sp"
                      android:id="@+id/games"
                      android:textColor="#ff0022"
                      android:gravity="center"
                      android:textStyle="bold"
                      android:background="@drawable/roundbox"
                      android:layout_marginRight="5dp"
                      android:layout_height="match_parent" tools:ignore="InvalidId"/>
            <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                      android:textColor="#ff0000"
                      android:text="X"
                      android:gravity="center"
                      android:textSize="40sp"
                      android:id="@+id/wrong"
                      android:onClick="btnClick"
                      android:background="@drawable/roundbox2"
            android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight="1"
                      android:orientation="horizontal">
            <TextView
                    android:layout_weight="1.2"
                    android:layout_width="0dp"
                    android:text="@string/p1_score"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:id="@+id/player1_score"
            />
            <TextView
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:text="0"
                    android:gravity="center"
                    android:textSize="40sp"
                    android:textColor="#000fff"
                    android:background="@drawable/roundbox"
                    android:id="@+id/p1_score"
                    android:layout_height="wrap_content"

            />
            <TextView
                    android:layout_weight="1.2"
                    android:layout_width="0dp"
                    android:text="@string/p2_score"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:id="@+id/player2_score"
            />
            <TextView
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:text="0"
                    android:textColor="#000fff"
                    android:id="@+id/p2_score"
                    android:gravity="center"
                    android:textSize="40sp"
                    android:background="@drawable/roundbox"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
